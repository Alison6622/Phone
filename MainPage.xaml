<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneApp.MainPage">


    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Entry x:Name="NameText"
            Text="{Binding NameFill}" 
            Placeholder="Введите Ваше имя" />

        <Entry x:Name="SurnameText"
            Text="{Binding SurnameFill}" 
            Placeholder="Введите Вашу фамилию" />

        <DatePicker x:Name="DatePic"
            Date="{Binding DateFill}"/>

        <StackLayout Orientation="Horizontal">
            <Button x:Name="SaveButton"
                Text="Сохранить" 
                Clicked="SaveClick" />

            <Button x:Name="RecoveryButton"
                Text="Восстановить" 
                Clicked="RecoveryClick" />

        </StackLayout>

    </VerticalStackLayout>

</ContentPage>
